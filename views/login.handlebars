{{> navbar}}
<center>
  <div class="title">Login</div>

  {{#if message}}
    <div class="alert alert-danger">{{message}}</div>
  {{/if}}

  <form action="/login" method="post">
    <div>
      <div class="pagecolor">EMAIL</div>
       <input  type="email" name="email" class="pagecolor" placeholder="Enter your email" maxlength="25" size="25" />
    </div>

    <div>
      <div class="pagecolor">PASSWORD</div>
      <input  type="password" name="password" class="pagecolor" placeholder="Enter your password" maxlength="25" size="25" />
    </div>
    <div>
      <div>Need an account?</div>
      <a href="/index"> Create an account here </a>
    </div>

    <section class="Login">
      <div class="Login-button">
        <input class="roundbutton" type="submit" value="Login" />
      </div>
    </section>
  </form>
</center>
