{{> navbar}}
<center>
<div class="title">
  Edit Mentor Account
</div>
<form action="/edit/mentor" method="post">
  <div class="editmentee">
    <h6 class="formh6"> NAME </h6>
    <input type="text" name="name" placeholder="Enter your full name" value={{name}}><br>
    <h6 class="formh6"> EMAIL </h6>
    <input class="form-input form-control" name="email" type="text" value={{email}} disabled><br>
    <h6 class="formh6"> COLLEGE </h6>
    <select class="select-college" name="college">
      <option value="ucsd">UC San Diego</option>
      <option value="harvard">Harvard</option>
      <option value="stanford">Stanford</option>
    </select>
    <h6 class="formh6">YEAR</h6>
    <select class="select-college" name="year">
      <option value="Freshman">Freshman</option>
      <option value="Sophmore">Sophmore</option>
      <option value="Junior">Junior</option>
      <option value="Senior">Senior</option>
      <option value="Graduate">Graduate</option>
    </select>
    <h6 class="formh6">MAJOR</h6>
    <input type="text" name="major" placeholder="Enter your major" value="{{major}}" /><br>
    <h6 class="formh6"> BACKGROUND</h6>
    <textarea  name="text" maxlength="1000" cols="25" rows="10" placeholder="Tell us about yourself! What are you studying?"></textarea>
    <h6 class="formh6"> HOW CAN YOU HELP?</h6>
    <textarea  name="text" maxlength="1000" cols="25" rows="10" placeholder="How can you help?"></textarea>
    <br>
    <br>
  </div></br>
  <div class="create-account-button">
    <input class="roundbutton" type="submit" value="Save" />
  </div>
</form>

</center>
